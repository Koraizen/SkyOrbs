args = "export JAVA_HOME=/nix/store/k95pqfzyvrna93hc9a4cg5csl7l4fh0d-openjdk-21.0.7+6 && export PATH=$JAVA_HOME/bin:$PATH && mvn clean package -DskipTests && echo \"Build completed successfully! JAR file: target/SkyOrbs-2.0.0.jar\""

[workflows.workflow.metadata]
outputType = "console"
